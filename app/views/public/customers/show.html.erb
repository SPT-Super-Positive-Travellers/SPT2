<div class="container">
  <div class="row">
    <h4>マイページ</h4>
    <div class="col">
      <h3><b>登録情報</b></h3>
        <%= link_to '編集する', customers_information_edit_path, class:"btn btn-success" %>
      <table class="table">
        <tr>
          <th>氏名</th>
          <th><%= @customer.full_name %></th>
        </tr>

        <tr>
          <th>カナ</th>
          <th><%= @customer.full_name_kana %></th>
        </tr>

        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>

        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>

        <tr>
          <th>電話番号</th>
          <th><%= @customer.phone_number %></th>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
      </table>
      <h3><b>配送先</b></h3>
        <%= link_to '一覧を見る', destinations_path, class:"btn btn-primary" %>
      <h3><b>注文履歴</b></h3>
        <%= link_to '一覧を見る', orders_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>