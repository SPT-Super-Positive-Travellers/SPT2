<div class="container">
  <div class="row">
    <h4>会員情報編集</h4>
    <div class="col">
      <table class="table table-borderless">
        <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
          <tr>
            <th>氏名</th>
            <th><%= f.text_field :last_name %></th>
            <th><%= f.text_field :first_name %></th>
          </tr>

          <tr>
            <th>フリガナ</th>
            <th><%= f.text_field :last_name_kana %></th>
            <th><%= f.text_field :first_name_kana %></th>
          </tr>

          <tr>
            <th>郵便番号</th>
            <th><%= f.text_field :postal_code %></th>
            <th></th>
          </tr>

          <tr>
            <th>住所</th>
            <th><%= f.text_field :address %></th>
            <th></th>
          </tr>

          <tr>
            <th>電話番号</th>
            <th><%= f.text_field :phone_number %></th>
            <th></th>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <th><%= f.text_field :email %></th>
            <th></th>
          </tr>

          <tr>
            <th></th>
            <th><%= f.submit '編集内容を保存', class:"btn btn-success px-5" %></th>
            <th><%= link_to '退会する', customers_confirm_path, class:"btn btn-danger" %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>