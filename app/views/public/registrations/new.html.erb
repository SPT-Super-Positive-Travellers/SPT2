<div class="container">
  <div class="row">
    <div class="col">
      <h2>新規会員登録</h2>

        <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <table class="table table-borderless">

            <tr>
              <th>名前</th>
              <th>(姓)<%= f.text_field :last_name, autofocus: true %>
                  (名)<%= f.text_field :first_name %></th>
              <th></th>
            </tr>

            <tr>
              <th>フリガナ</th>
              <th>(セイ)<%= f.text_field :last_name_kana %>
                  (メイ)<%= f.text_field :first_name_kana %></th>
            </tr>

            <tr>
              <th>メールアドレス</th>
              <th><%= f.text_field :email %></th>
            </tr>

            <tr>
              <th>郵便番号(ハイフンなし)</th>
              <th><%= f.text_field :postal_code %></th>
            </tr>

            <tr>
              <th>住所</th>
              <th><%= f.text_field :address %></th>
            </tr>

            <tr>
              <th>電話番号(ハイフンなし)</th>
              <th><%= f.text_field :phone_number %></th>
            </tr>

            <tr>
              <th>
                パスワード
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %>
                <br />
              </th>
              <th><%= f.password_field :password, autocomplete: "new-password" %></th>
            </tr>

            <tr>
              <th>パスワード(確認用)</th>
              <th> <%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
            </tr>

            <tr>
              <th></th>
              <th><%= f.submit '新規登録', class:"btn btn-success px-5" %></th>
            </tr>
          </table>
          <%= render "public/shared/links" %>
        <% end %>
    </div>
  </div>
</div>