<div class="container">
  <div class="row">
    <%= render 'sidebar', genres: @genres %>
    <div class="col-md-8">
      <h4><b>商品一覧</b>(全<%= @items.count %>件)</h4>
      <% @items.each do |item| %>
        <div class="">
          <%= link_to item_path(item) do %>
            <%= image_tag item.item_image, size: "190x150" %>
          <% end %><br>
          <%= item.name %><br>
          ¥<%= item.price %>
        </div>
      <% end %>
    </div>
  </div>
</div>