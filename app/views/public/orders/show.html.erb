<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>注文履歴詳細</h4>

        <strong>注文情報</strong>
        <table class="table table-bordered">
            <tr>
              <th class="bg-light">注文日</th>
              <td><%= @order.created_at %></td>
            </tr>

            <tr>
              <th class="bg-light">配送先</th>
              <td>
                〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>

            <tr>
              <th class="bg-light">支払方法</th>
              <td><%= @order.payment_i18n %></td>
            </tr>

            <tr>
              <th class="bg-light">ステータス</th>
              <td></td>
            </tr>
        </table>
      </div>

      <div class="col-md-3 mt-5">
        <strong>請求情報</strong>
        <table class="table table-bordered">
          <tr>
            <th class="bg-light">商品合計</th>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>

          <tr>
            <th class="bg-light">配送料</th>
            <td><%= @order.delivery_fee %></td>
          </tr>

          <tr>
            <th class="bg-light"><b>ご請求額</b></th>
            <td><%= @order.amount_billed.to_s(:delimited) %></td>
          </tr>
        </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <strong>注文内容</strong>
        <table class="table table-bordered">
          <thead class="bg-light">
            <tr>
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <th><%= order_item.item.name %></th>
              <th><%= order_item.item.with_tax_price %></th>
              <th><%= order_item.count %></th>
              <th><%= order_item.total_price.to_s(:delimited) %></th>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>