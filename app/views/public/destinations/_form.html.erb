<table class="table table-borderless">
  <%= form_with model: @destination do |f| %>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <th><%= f.text_field :postal_code %></th>
      <th></th>
    </tr>

    <tr>
      <th>住所</th>
      <th><%= f.text_field :address %></th>
      <th></th>
    </tr>

    <tr>
      <th>宛名</th>
      <th><%= f.text_field :name %></th>
      <th>
        <% if current_page?(destinations_path) %>
          <%= f.submit '新規登録', class:"btn btn-success" %>
        <% else %>
          <%= f.submit '変更内容を保存', class:"btn btn-success" %>
        <% end %>
      </th>
    </tr>
  <% end %>
</table>