<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-flex">
        <h4>ショッピングカート</h4>
        <%= link_to 'カートを空にする', cart_items_destroy_all_path, class:"btn btn-danger" %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <th>
              <%= image_tag cart_item.item_image, size: '50x30' %>
              <%= cart_item.name %>
            </th>
            <th><%= cart_item.price %></th>
            <th>
              <%= form_with model: @cart_item do |f| %>
                <%= f.select :count, *[1..10],{} %>
                <%= f.submit '変更', class:"btn btn-success" %>
              <% end %>
            </th>
            <th><%= cart_item.subtotal %></th>
            <th><%= link_to '削除する', cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %></th>
          </tr>
        </table>
        <%= link_to '買い物を続ける', items_path %>
        <div class="d-flex">
          <table class="table">
            <tr>
              <th>合計金額</th>
              <th><%= @total %></th>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>