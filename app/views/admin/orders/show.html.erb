<div class="container">
  <div class="row">
    <div class="col">
      <h4>注文履歴詳細</h4>
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td>
            <%= link_to admin_customer_path(@order.customer_id) do %>
              <%= @order.customer.full_name %>
            <% end %>
          </td>
        </tr>

        <tr>
          <th>注文日</th>
          <td><%= l @order.created_at %></td>
        </tr>

        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>

        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_i18n %></td>
        </tr>

        <tr>
          <th>注文ステータス</th>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <table class="table table-bordered">
        <thead class="bg-light table table-borderless">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="table table-borderless">
          <% @order.order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.item.with_tax_price %></td>
              <td><%= order_item.count %></td>
              <td><%= order_item.total_price %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <table class="table table-borderless">
        <tr>
          <th>商品合計</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>

        <tr>
          <th>送料</th>
          <td><%= @order.delivery_fee %></td>
        </tr>

        <tr>
          <th>請求金額</th>
          <td><%= @order.amount_billed.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>