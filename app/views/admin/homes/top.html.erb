<div class="container">
  <div class="row">
    <div class="col">
      <h4>注文履歴一覧</h4>
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tr>
            <th>
              <%= link_to admin_order_path(order) do %>
                <%= order.created_at %>
              <% end %>
            </th>
            <th><%= order.customer.full_name %></th>
            <th>
              <% total_count = 0 %>
              <% order.order_items.each do |item| %>
                <% total_count += item.count %>
              <% end %>
              <%= total_count %>
            </th>
            <th></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>