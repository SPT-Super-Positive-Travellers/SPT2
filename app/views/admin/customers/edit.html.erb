<div class="container">
  <div class="row">
    <div class="col">
      <h4><%= @customer.full_name %>さんの会員詳細</h4>
      <%= form_with model: [:admin, @customer] do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
          <th></th>
        </tr>

        <tr>
          <th>氏名</th>
          <th><%= f.text_field :last_name %> <%= f.text_field :first_name %></th>
          <th></th>
        </tr>

        <tr>
          <th>フリガナ</th>
          <th><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></th>
        </tr>

        <tr>
          <th>郵便番号</th>
          <th><%= f.text_field :postal_code %></th>
        </tr>

        <tr>
          <th>住所</th>
          <th><%= f.text_field :address %></th>
        </tr>

        <tr>
          <th>電話番号</th>
          <th><%= f.text_field :phone_number %></th>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <th><%= f.text_field :email %></th>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <th>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, '有効', { value: :false } %>

            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, '退会', { value: :true } %>
          </th>
        </tr>

        <tr>
          <th></th>
          <th><%= f.submit '変更を保存' , class:"btn btn-success" %></th>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>