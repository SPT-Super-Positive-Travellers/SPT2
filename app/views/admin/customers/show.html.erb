<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h4><%= @customer.full_name %>さんの会員詳細</h4>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
          <th></th>
        </tr>

        <tr>
          <th>氏名</th>
          <th><%= @customer.last_name %><%= @customer.first_name %></th>
          <th></th>
        </tr>

        <tr>
          <th>フリガナ</th>
          <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
          <th></th>
        </tr>

        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
          <th></th>
        </tr>

        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
          <th></th>
        </tr>

        <tr>
          <th>電話番号</th>
          <th><%= @customer.phone_number %></th>
          <th></th>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
          <th></th>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <th><%= @customer.cus_status %></th>
          <th></th>
       </tr>

        <tr>
          <th></th>
          <th><%= link_to '編集する', edit_admin_customer_path, class:"btn btn-success" %></th>
          <th><%= link_to '注文履歴一覧を見る', admin_path, class:"btn btn-primary" %></th>
        </tr>
      </table>


    </div>
  </div>
</div>