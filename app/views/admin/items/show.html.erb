<div class="container">
  <div class="row">
    <div class="col-md-5">
      <%= image_tag @item.item_image, sixe: '300x250' %>
    </div>

    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <th><%= @item.name %></th>
        </tr>

        <tr>
          <th>商品紹介</th>
          <th><%= @item.introduction %></th>
        </tr>

        <tr>
          <th>ジャンル</th>
          <th><%= @item.item_genre.name %></th>
        </tr>

        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <th><%= @item.price %></th>
        </tr>

        <tr>
          <th>販売ステータス</th>
          <th><%= @item.item_status %></th>
        </tr>
      </table>
      <%= link_to '編集する', edit_admin_item_path(@item), class:"btn btn-success" %>
    </div>
  </div>
</div>